version: '1.0'

services:
  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./frontend/src:/usr/share/nginx/html
    depends_on:
      - frontend
    networks:
      - marketing-network

  frontend:
    build: ./frontend
    ports:
      - "3000:80"
    networks:
      - marketing-network

  menu:
    build: ./menu-service
    ports:
      - "5001:5000"
    networks:
      - marketing-network

  reservations:
    build: ./special-order
    ports:
      - "5002:5000"
    environment:
      - FORMSPREE_URL=https://formspree.io/f/xwpqganp
    networks:
      - marketing-network

  order:
    build: ./order-service
    ports:
      - "5003:5000"
    environment:
      - FORMSPREE_URL=https://formspree.io/f/xwpqganp
    networks:
      - marketing-network

